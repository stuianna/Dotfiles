exec --no-startup-id sleep 5 && /home/stuart/Dotfiles/bin/gitMonitor.sh /home/stuart/wiki viss.ctd     # Auto-commits for wiki folder
exec --no-startup-id xautolock -time 5 -locker "/usr/bin/i3lock -c 000000 -f -n && sleep 5 && /home/stuart/Dotfiles/bin/gitMonitor.sh /home/stuart/wiki update"                              # Auto screen lock
bindsym $mod+b exec --no-startup-id dolphin

#Lock screen
bindsym $mod+Shift+x exec --no-startup-id "/usr/bin/i3lock -c 000000 -f -n && sleep 5 && /home/stuart/Dotfiles/bin/gitMonitor.sh /home/stuart/wiki update"
