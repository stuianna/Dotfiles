#Mod key
set $mod Mod4
set $term $TERMINAL
set $browser $BROWSER
set $float_x 400
set $float_y 600

#Set resolution first
exec --no-startup-id xrandr --output ${RESOLUTION_TARGET} --mode ${RESOLUTION_V}x${RESOLUTION_H}

#Startup programs
exec --no-startup-id "unclutter -root -idle 1"    #hide mouse
exec --no-startup-id dropbox start  #dropbox
exec --no-startup-id nm-applet      #Network manager
exec --no-startup-id udiskie  --no-notify --tray --use-udisks2 #disk automount
exec --no-startup-id polybar -r -c ~/.polybar/config example #polyar
exec --no-startup-id ~/.wallpaper/wallpaper.sh & #Desktop backgroud ranomizer
exec --no-startup-id pasystray #Audo control trag
exec --no-startup-id blueman-applet #bluetooth control tray
exec --no-startup-id xautolock -time 5 -locker /usr/bin/i3lock-wrapper #Auto screen lock
exec --no-startup-id caffeine  #No sleep task bar icon
exec --no-startup-id i3-msg 'workspace email; exec $BROWSER --app=https://www.protonmail.com/login'

#Change the keyboard repreat rate
exec --no-startup-id xset r rate 250 35

#Monitor monitors, change output if external connected
exec --no-startup-id mons -a -x /home/$USER/.i3/monitor.sh

#Some floating windows
bindsym $mod+b fullscreen disable; floating enable; resize set 35 ppt 35 ppt; sticky enable; move window to position 805 42
bindsym $mod+n fullscreen disable; floating disable

#Lock screen
bindsym $mod+Shift+x exec --no-startup-id i3lock-wrapper 

#Audio control
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q sset Master 5%+ unmute
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q sset Master 5%- unmute
bindsym XF86AudioMute exec --no-startup-id amixer -D pulse set Master 1+ toggle
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

#Brightness
bindsym XF86MonBrightnessUp exec --no-startup-id sudo brightnessctl set +10%
bindsym XF86MonBrightnessDown exec --no-startup-id sudo brightnessctl set 10%-

#Disable mouse focus
focus_follows_mouse no

#Cycle through workspaces
bindsym $mod+grave  workspace prev
bindsym $mod+BackSpace  workspace next

#system commands
set $shutdown sudo shutdown -h now
set $reboot sudo reboot
set $netrefresh --no-startup-id sudo systemctl restart NetworkManager
set $hibernate sudo systemctl suspend

#Programs
bindsym $mod+w exec --no-startup-id $browser
bindsym $mod+s exec --no-startup-id $term -e ranger -r ~/.ranger

#Matlab
exec --no-startup-id st -n matlabterm -e matlab -nodesktop  -nosplash -softwareopengl
bindsym $mod+a [instance="matlabterm"] scratchpad show; [instance="matlabterm"] move position center
bindsym $mod+x exec st -e matlab -nodesktop -nosplash -softwareopengl
for_window [instance="matlabterm"] floating enable
for_window [instance="matlabterm"] resize set 800 400
for_window [instance="matlabterm"] move scratchpad
for_window [instance="matlabterm"] border pixel 5

#vocabBuilder
exec --no-startup-id vocabBuilder-cli ~/Dropbox/words/current.csv -q 5 -t 15

#calandar 
exec --no-startup-id st -n cal -f mono:pixelsize=16 -e calcurse /home/stuart/Dropbox/Other/calcurse
bindsym $mod+y [instance="cal"] scratchpad show; [instance="cal"] move position center
for_window [instance="cal"] floating enable
for_window [instance="cal"] resize set 800 600
for_window [instance="cal"] move scratchpad
for_window [instance="cal"] border pixel 5

#Floating matlab figure windows
for_window[class="MATLAB R2017a - student use" title="Figure*"] floating enable

#Spare terminal
for_window [instance="dropdown"] floating enable
for_window [instance="dropdown"] resize set 625 400
for_window [instance="dropdown"] move scratchpad
for_window [instance="dropdown"] border pixel 5
exec --no-startup-id $term -n dropdown 
bindsym $mod+u [instance="dropdown"] scratchpad show; [instance="dropdown"] move position center

#open terminal left and right
bindsym $mod+bracketright split horizontal ;; exec --no-startup-id $term
bindsym $mod+bracketleft  split vertical ;; exec --no-startup-id $term

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec --no-startup-id $term 

# kill focused window
bindsym $mod+Shift+q kill
bindsym $mod+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec --no-startup-id dmenu_run
bindsym --release $mod+p exec --no-startup-id deepin-screenshot -s ~/Pictures
bindsym --release $mod+Shift+p exec --no-startup-id shutter --full

#bindsym $mod+Shift+a [class=client.focused] floating enable; [class=client.focused] resize set 10 ppt 95ppt; [class=client.focused] move position center

# Compon
exec --no-startup-id compton --config .compton/config

#Scratchpad
bindsym $mod+minus move scratchpad
bindsym $mod+equal scratchpad show

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+Semicolon split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

#exec --no-startup-id exec sudo openvpn /home/stuart/.airvpn_config_all.ovpn #VPN

#bindsym $mod+Shift+v workspace vpn; exec sudo eddie-ui #VPN
bindsym $mod+Shift+s workspace spotify; exec spotify #SPOTIFY

#open VM
bindsym $mod+z  exec vboxmanage startvm windown -E fullscreen setvideomodehint ${RESOLUTION_V} ${RESOLUTION_H} 32
#bindsym $mod+z exec --no-startup-id i3-msg 'workspace win10; exec virtualbox --startvm win10 --fullscreen'
exec --no-startup-id xrandr --output ${RESOLUTION_TARGET} --mode ${RESOLUTION_V}x${RESOLUTION_H}

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
bindsym $mod+Shift+Delete exec i3-msg exit

for_window [class="^.*"] border pixel 2
gaps inner 4 
gaps outer 4
smart_borders no_gaps
smart_gaps on

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

