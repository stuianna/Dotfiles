#Set modifier
set $mod Mod4
set $term urxvt                                                                                         # Load terminal from .xprofile
set $browser brave                                                                                      # Load browser from .xprofile
set $shutdown sudo shutdown -h now
set $reboot sudo reboot
set $netrefresh --no-startup-id sudo systemctl restart NetworkManager
set $hibernate sudo systemctl suspend

### Set floating window location
set $float_x 400
set $float_y 600

#Change the keyboard repreat rate
exec --no-startup-id xset r rate 250 35

### Startup programs
exec --no-startup-id i3-msg 'workspace cherry; exec cherrytree'                                         # Launch Cherrytree on its own workspace
exec --no-startup-id "unclutter -root -idle 1"                                                          # Hide mouse after one minute idle
exec --no-startup-id dropbox start                                                                      # Start Dropbox (Taskbar)
exec --no-startup-id nm-applet                                                                          # Network manager (Taskbar)
exec --no-startup-id udiskie  --no-notify --tray --use-udisks2                                          # Disk automount (Taskbar)
exec --no-startup-id launch_polybar.sh                                                                  # Launch polybar on all workspaces
exec --no-startup-id blueman-applet                                                                     # Bluetooth applet (Taskbar)
exec --no-startup-id xautolock -time 5 -locker "/usr/bin/blurlock"                                      # Auto screen lock
exec --no-startup-id caffeine                                                                           # No sleep function (Taskbar)\
exec --no-startup-id conky -c ~/.conky                                                                  # Conky
exec --no-startup-id ~/.bin/wallpaper.sh &                                                              # Desktop backgroud ranomizer
exec --no-startup-id pasystray                                                                          # Audio control tray
exec --no-startup-id xfce4-clipman                                                                      # Tray for copy/paste
exec --no-startup-id sleep 1.5 && docked
exec --no-startup-id wal -R
exec --no-startup-id xfce4-power-manager
exec --no-startup-id "brave --app=https://www.protonmail.com/login"                                     # Email in workspace (defined below)
exec --no-startup-id "brave --incognito https://calendar.google.com --start-fullscreen"                 # Calendar in workspace (defined below)

# Catagorical menu
bindsym $mod+z exec --no-startup-id morc_menu
bindsym $mod+Ctrl+b exec urxvt -e 'bmenu'

#Some Floating windows for videos
bindsym $mod+b fullscreen disable; floating enable; resize set 35 ppt 35 ppt; sticky enable; move window to position 805 42
bindsym $mod+n fullscreen disable; floating disable

# Floating PDF
bindsym $mod+g fullscreen disable; floating enable; resize set 55 ppt 95 ppt; move window to position 307 32

#Lock screen
bindsym $mod+Shift+x exec --no-startup-id blurlock

#Audio control
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q sset Master 5%+ unmute
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q sset Master 5%- unmute
bindsym XF86AudioMute exec --no-startup-id amixer -D pulse set Master 1+ toggle
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

#Brightness
bindsym XF86MonBrightnessUp exec --no-startup-id sudo brightnessctl set +10%
bindsym XF86MonBrightnessDown exec --no-startup-id sudo brightnessctl set 10%-

#bindsym XF86MonBrightnessUp exec "xbacklight -inc 10; notify-send 'brightness up'"
#bindsym XF86MonBrightnessDown exec "xbacklight -dec 10; notify-send 'brightness down'"

#Disable mouse focus
focus_follows_mouse no

#Cycle through workspaces
bindsym $mod+grave  workspace prev
bindsym $mod+BackSpace  workspace next

#Programs
bindsym $mod+w exec --no-startup-id brave 
bindsym $mod+s exec --no-startup-id $term -e ranger -r ~/.ranger

#Matlab
exec --no-startup-id urxvt -name matlabterm -e matlab -nodesktop  -nosplash -softwareopengl
bindsym $mod+a [instance="matlabterm"] scratchpad show; [instance="matlabterm"] move position center
bindsym $mod+x exec urxvt -e matlab -nodesktop -nosplash -softwareopengl
for_window [instance="matlabterm"] floating enable
for_window [instance="matlabterm"] resize set 800 400
for_window [instance="matlabterm"] move scratchpad
for_window [instance="matlabterm"] border pixel 5

#vocabBuilder
exec --no-startup-id vocabBuilder-cli ~/Dropbox/words/current.csv -q 5 -t 15

#calandar 
exec --no-startup-id urxvt -name cal -e calcurse 
bindsym $mod+y [instance="cal"] scratchpad show; [instance="cal"] move position center
for_window [instance="cal"] floating enable
for_window [instance="cal"] resize set 800 600
for_window [instance="cal"] move scratchpad
for_window [instance="cal"] border pixel 5

#Floating matlab figure windows
for_window[class="MATLAB R2017a - student use" title="Figure*"] floating enable

# Devel term used by QT, make it floating
for_window[instance="develTerm"] floating enable

#Floating window for laptop multiple monitor setup
for_window[instance="term10"] floating enable move to position 40 40 
for_window[instance="term10"] resize set 680 510
for_window[instance="term10"] move container to workspace 10

#Spare terminal
for_window [instance="dropdown"] floating enable
for_window [instance="dropdown"] resize set 625 400
for_window [instance="dropdown"] move scratchpad
for_window [instance="dropdown"] border pixel 5
bindsym $mod+u [instance="dropdown"] scratchpad show; [instance="dropdown"] move position center
exec --no-startup-id urxvt -name dropdown 

#open terminal left and right
bindsym $mod+bracketright split horizontal ;; exec --no-startup-id $term
bindsym $mod+bracketleft  split vertical ;; exec --no-startup-id $term

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec --no-startup-id $term 

# kill focused window
bindsym $mod+Shift+q kill
bindsym $mod+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec --no-startup-id dmenu_run
bindsym --release $mod+p exec --no-startup-id deepin-screenshot -s ~/Pictures
bindsym --release $mod+Shift+p exec --no-startup-id shutter --full

