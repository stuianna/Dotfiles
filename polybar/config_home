[module/wlan]
type = internal/network
interface = wlp1s0
interval = 2.0
unknown-as-up = true
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected =  %downspeed:9%   %upspeed:9%
label-connected-foreground = #eefafafa
label-disconnected = 
label-disconnected-foreground = #66ffffff

[module/date]
type = internal/date
interval = 1.0
date = %Y-%m-%d%
time = %H:%M
date-alt = %A, %d %B %Y
time-alt = %H:%M:%S
format =  <label>
label =   %date% %time%
label-font = 3

